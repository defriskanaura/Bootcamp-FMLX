@model Product

<h1>Create Product</h1>
<div>
    <form method="post">
        <div class="form-group">
            <label>Category Name:</label>
            <input type="text" asp-for="ProductName" class="form-control required" placeholder="Enter product name">
        </div>
        <div class="form-group">
            <label>Description:</label>
            <input type="text" asp-for="Description" class="form-control required" placeholder="Enter product description">
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input type="text" asp-for="Price" class="form-control required" placeholder="Enter product price">
        </div>
        <div class="form-group">
            <label>Category:</label>
            <input type="text" asp-for="Category.CategoryName" class="form-control required" placeholder="Enter product category">
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <button type="submit" class="btn btn-success" >Create</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancel</a>
            </center>
        </div>
    </form>
</div>