@model WebMVC.Models.Category

<h1>Create Category</h1>
<div>
    <form method="post">
        <input type="text" asp-for="CategoryId" hidden>
        <div class="form-group">
            <label>Category Name:</label>
            <input type="text" asp-for="CategoryName" class="form-control required" placeholder="Enter category name">
        </div>
        <div class="form-group">
            <label>Description:</label>
            <input type="text" asp-for="Description" class="form-control required" placeholder="Enter category description">
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <button type="submit" class="btn btn-warning" >Update</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancel</a>
            </center>
        </div>
    </form>
</div>