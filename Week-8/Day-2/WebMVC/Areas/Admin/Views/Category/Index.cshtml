@model IEnumerable<Category>
<partial name="_Notification"></partial>
<h1>Categories</h1>
<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" 
                        asp-route-id="@item.CategoryId" asp-controller="Category">
                        Update
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" 
                        asp-route-id="@item.CategoryId" asp-controller="Category">
                        Delete
                        </a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>